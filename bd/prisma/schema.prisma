generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model cidades {
  id        Int         @id @default(autoincrement())
  nome      String      @db.VarChar(100)
  enderecos enderecos[]
}

model enderecos {
  id          Int     @id @default(autoincrement())
  logradouro  String  @db.VarChar(100)
  cep         String  @db.VarChar(9)
  numero      Int
  bairro      String  @db.VarChar(100)
  complemento String  @db.VarChar(255)
  estado      String  @db.VarChar(50)
  userId      Int
  cidadesId   Int
  cidades     cidades @relation(fields: [cidadesId], references: [id])

  @@index([cidadesId], map: "enderecos_cidadesId_fkey")
}

model estados {
  id       Int    @id @default(autoincrement())
  nome     String @db.VarChar(100)
  cidadeId Int
}

model usuarios {
  id              Int       @id @default(autoincrement())
  nome_completo   String    @db.VarChar(150)
  email           String?   @unique(map: "email") @db.VarChar(60)
  senha           String?   @db.VarChar(30)
  telefone        String?   @db.VarChar(16)
  cpf             String?   @unique(map: "cpf")@db.VarChar(11)
  data_nascimento DateTime? @db.Date
}
